testclass SimpleLightTest for statechart SimpleLight {
	@Test
	operation test01 () {
	    enter
	    raise toggle
	    raise inc
	    assert is_active
	}

	@Test
	operation test02 () {
	    enter
	    triggerWithoutEvent
	    assert is_active
	}

	@Test
	operation test03 () {
	    enter
	    raise toggle
	    assert is_active
	    exit
	    assert !is_active
	}

	@Test
	operation test04 () {
	    enter
	    raise toggle
	    raise toggle
	    assert is_active
	    exit
	    assert !is_active
	}

	@Test
	operation test05 () {
	    enter
	    raise toggle
	    assert is_active
	    assert active (SimpleLight.main_region.On)
	}

	@Test
	operation test06 () {
	    enter
	    assert is_active
	    assert active (SimpleLight.main_region.Off)
	}

	@Test
	operation test07 () {
	}

	@Test
	operation test08 () {
	    assert !active (SimpleLight.main_region.On)
	}

	@Test
	operation test09 () {
	    assert !active (SimpleLight.main_region.Off)
	}

	@Test
	operation test10 () {
	    enter
	    assert is_active
	}

	@Test
	operation test11 () {
	    assert !is_active
	}

	@Test
	operation test12 () {
	    exit
	    assert !is_active
	}

	@Test
	operation test13 () {
	    assert !is_final
	}

	@Test
	operation test14 () {
	    triggerWithoutEvent
	    assert !is_final
	}

	@Test
	operation test15 () {
	    assert !is_active
	    enter
	    raise toggle
	    raise dec
	    raise inc
	    assert is_active
	}

}