testclass ControllerTest for statechart Controller {
	@Test
	operation test01 () {
	}

	@Test
	operation test02 () {
	    assert !active (Controller.main_region.Light_2)
	}

	@Test
	operation test03 () {
	    assert !active (Controller.main_region.On)
	}

	@Test
	operation test04 () {
	    assert !active (Controller.main_region.Light_1)
	}

	@Test
	operation test05 () {
	    assert !active (Controller.main_region.Off)
	}

	@Test
	operation test06 () {
	    assert !is_active
	}

	@Test
	operation test07 () {
	    exit
	    assert !is_active
	}

	@Test
	operation test08 () {
	    raise dec
	    assert !is_active
	}

	@Test
	operation test09 () {
	    raise control2
	    assert !is_final
	}

	@Test
	operation test10 () {
	    triggerWithoutEvent
	    assert !is_final
	}

	@Test
	operation test11 () {
	    raise inc
	    assert !is_final
	}

	@Test
	operation test12 () {
	    raise control1
	    assert !is_final
	}

	@Test
	operation test13 () {
	    raise powerOn
	    assert !is_final
	}

	@Test
	operation test15 () {
	    assert !is_active
	    assert !is_final
	}

}